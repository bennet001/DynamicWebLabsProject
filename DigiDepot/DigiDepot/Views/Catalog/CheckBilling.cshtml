@model BillingInfo
@{
    ViewBag.Title = "BillingCheck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>BillingCheck</h2>
</div>
<div class="content">
       <p>Does your Credit card end with the digits @Model.Security  and have the name @Model.FirstName @Model.LastName</p>
    @Html.ActionLink("Yes", "ConfirmPurchase") @Html.ActionLink("No", "EditBilling", controllerName: "Home", routeValues: new { id = @Session["UserID"] }, htmlAttributes: null)
</div>