@model List<Product>

@{
    ViewBag.Title = "Catalog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>This is the Catalog</h2>
</div>

<div>
    <div class="content">
        @foreach (Product c in Model)
        {
            @Html.Partial("~/Views/_CatalogPartial.cshtml", @c);
        }
    </div>
    @if (Session["UserID"] != null)
    {
        <p><a href="/Catalog/ViewCart" class="btn btn-primary btn-lg">Cart &raquo;</a></p>
    }

</div>
