@model Product

@{
    ViewBag.Title = "ShowProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="jumbotron">
    <h2>ShowProduct</h2>
</div>
<div>
    <h2>@Model.Name</h2>
    <h3>@Model.Price  Avaliable: @Model.Stock</h3>
    @Html.ActionLink("Add To Cart", "AddToCart", new { id = @Model.Id })
</div>
