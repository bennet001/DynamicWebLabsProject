@model Product

@{
    ViewBag.Title = "ShowProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="jumbotron">
    <h2>ShowProduct</h2>
</div>
<div>
    <h2>@Model.Name</h2>
    <h2>@Model.Description</h2>
    <h3>@String.Format("{0:C}", Model.Price)  Avaliable: @Model.Stock</h3>
    @if (Session["USerID"] != null) { 
        @Html.ActionLink("Add To Cart", "AddToCart", new { id = @Model.Id })
    }
    else
    {
        @Html.ActionLink("Add To Cart", "Register", "Home")
    }
</div>
