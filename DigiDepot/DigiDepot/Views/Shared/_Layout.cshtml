
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DigiDepot Group 5 ASP.NET Application</title>
    <link href="~/Styles/MainStyleSheet.css" rel="stylesheet" type="text/css" />
    
</head>
<body>

    <div class="sidebar">
        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <br />
        @Html.ActionLink("Catalog", "CatalogPage", "Catalog", new { area = "" }, new { @class = "navbar-brand" })
        <br />
        Search
        <br />
        @if (Session["UserInfo"] == null)
        { 
        @Html.ActionLink("Log In", "LogIn","Home")
        <br />
        @Html.ActionLink("Register", "Register", "Home")
        <br />
        }
        else
        {
            @Html.ActionLink(linkText: @Session["UserInfo"].ToString(), actionName: "UserPage", controllerName: "Home", routeValues: new { id = @Session["UserID"] }, htmlAttributes: null)
            <br />
            @Html.ActionLink(linkText: "Account Detail", actionName: "BillingInfo", controllerName: "Home", routeValues: new { id = @Session["UserID"] }, htmlAttributes: null)
            <br />
            <br />
            @Html.ActionLink(linkText:"LogOut", actionName:"LogOut", controllerName:"Home")
        }
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - DigiDepot Group 5 ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>