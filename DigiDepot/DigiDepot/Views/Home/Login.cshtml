@model DigiDepot.User

@{
    ViewBag.Title = "LogIn";
}

<div class="jumbotron"><h2>LogIn</h2></div>
<div>
    @using (Html.BeginForm())
    {
        <div>
            @Html.ValidationSummary()
        </div>
        <br />

        <div>
            <label>
                User name:
            </label>
            @Html.TextBoxFor(x => x.user_name)
        </div>
        <br />

        <div>
            <label>
                Password:
            </label>
            @Html.PasswordFor(x => x.password)
        </div>
        <br />

        <div class="btn">
            <input type="submit" value="Finish" />
        </div>
    }
</div>